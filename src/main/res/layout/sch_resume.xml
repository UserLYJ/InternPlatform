<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1cffe641"
    android:orientation="vertical"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.09">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="166dp"
                android:layout_weight="0.20"
                android:alpha="0.9"
                android:background="@android:color/holo_blue_light"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/schimage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="false"
                    android:alpha="1"
                    android:cropToPadding="false"
                    android:src="@drawable/friend_" />

            </LinearLayout>

            <EditText
                android:id="@+id/sch_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="姓名：" />

            <EditText
                android:id="@+id/sch_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="性别：" />

            <EditText
                android:id="@+id/sch_id_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="身份证号：" />

            <EditText
                android:id="@+id/sch_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="出生年月：" />

            <EditText
                android:id="@+id/sch_corname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="0.20"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="学校名称：" />

            <EditText
                android:id="@+id/sch_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="学校编号：" />

            <EditText
                android:id="@+id/sch_phonenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="0.20"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="联系方式：" />

            <EditText
                android:id="@+id/sch_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="电子邮箱：" />

            <EditText
                android:id="@+id/sch_describe"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="0.20"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="学校描述：" />

            <Button
                android:id="@+id/btn_sch_editResume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:text="编辑个人信息" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
