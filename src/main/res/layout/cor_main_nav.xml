<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <FrameLayout
        android:id="@+id/cor_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        ></FrameLayout>

    <LinearLayout
        android:background="#ffffff"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <com.mycompany.myfirstapp.utilities.TabButton
            android:id="@+id/btn_cor_index"
            android:background="#ffffffff"
            android:layout_margin="0dp"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <com.mycompany.myfirstapp.utilities.TabButton
            android:id="@+id/btn_cor_getresumes"
            android:background="#ffffffff"
            android:layout_margin="0dp"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <com.mycompany.myfirstapp.utilities.TabButton
            android:id="@+id/btn_cor_places"
            android:background="#ffffffff"
            android:layout_margin="0dp"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <com.mycompany.myfirstapp.utilities.TabButton
            android:id="@+id/btn_cor_message"
            android:background="#ffffffff"
            android:layout_margin="0dp"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <com.mycompany.myfirstapp.utilities.TabButton
            android:id="@+id/btn_cor_traindep"
            android:background="#ffffffff"
            android:layout_margin="0dp"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
