<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1cffe641"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="40dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="1">

        <ImageView
            android:id="@+id/corimage"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/friend_" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="201dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/cor_name"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:text="姓名" />

                <TextView
                    android:id="@+id/cor_corname"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.06"
                    android:text="公司名称" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/btn_sch_sitting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/doud_cord" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_cor_sitting"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/linearLayout2"
                android:layout_gravity="left"
                android:layout_toStartOf="@+id/linearLayout2"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:forceHasOverlappingRendering="false"
                    android:src="@drawable/push_"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/putplace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.45"
                    android:text="发布岗位"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/abc_background_cache_hint_selector_material_dark"
                    android:textSize="@dimen/abc_text_size_title_material_toolbar"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_cor_employee"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout2"
                android:layout_gravity="left"
                android:layout_toStartOf="@+id/linearLayout2"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:forceHasOverlappingRendering="false"
                    android:src="@drawable/offer_"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.45"
                    android:text="我的录用"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/abc_background_cache_hint_selector_material_dark"
                    android:textSize="@dimen/abc_text_size_title_material_toolbar"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_cor_number"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/linearLayout2"
                android:layout_gravity="left"
                android:layout_toStartOf="@+id/linearLayout2"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:forceHasOverlappingRendering="false"
                    android:src="@drawable/access_"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/schnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.45"
                    android:text="评价"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/abc_background_cache_hint_selector_material_dark"
                    android:textSize="@dimen/abc_text_size_title_material_toolbar"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_cor_feedback"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linearLayout2"
                android:layout_gravity="left"
                android:layout_toStartOf="@+id/linearLayout2"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:forceHasOverlappingRendering="false"
                    android:src="@drawable/feedback_"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.45"
                    android:text="反馈"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/abc_background_cache_hint_selector_material_dark"
                    android:textSize="@dimen/abc_text_size_title_material_toolbar"
                    android:textStyle="normal" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_cor_resume"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/linearLayout2"
                android:layout_gravity="left"
                android:layout_toStartOf="@+id/linearLayout2"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:forceHasOverlappingRendering="false"
                    android:src="@drawable/infor_"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.45"
                    android:text="个人信息"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/abc_background_cache_hint_selector_material_dark"
                    android:textSize="@dimen/abc_text_size_title_material_toolbar"
                    android:textStyle="normal" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:text="\@copyright" />

</LinearLayout>
