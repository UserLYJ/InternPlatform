<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1cffe641"
    android:orientation="vertical"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.59">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="166dp"
                android:layout_weight="0.20"
                android:alpha="0.9"
                android:background="@android:color/holo_blue_light"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/schimage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="false"
                    android:alpha="1"
                    android:cropToPadding="false"
                    android:src="@drawable/friend_" />

                <TextView
                    android:id="@+id/tip_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="点击添加/更换头像"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@android:color/background_light" />
            </LinearLayout>

            <EditText
                android:id="@+id/sch_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:hint="姓名"
                android:inputType="textPersonName" />

            <RadioGroup
                android:id="@+id/rg_sch_selctsex"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.79"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbtn_man"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="男" />

                <RadioButton
                    android:id="@+id/rbtn_woman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="女" />
            </RadioGroup>

            <EditText
                android:id="@+id/id_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:ems="10"
                android:hint="身份证号"
                android:inputType="time" />

            <EditText
                android:id="@+id/schid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:ems="10"
                android:hint="教工号"
                android:inputType="time" />

            <EditText
                android:id="@+id/_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:ems="10"
                android:hint="出生年月"
                android:inputType="time" />

            <DatePicker
                android:id="@+id/datePicker"
                style="@android:style/Widget.DatePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/sch_schname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_weight="0.20"
                android:ems="10"
                android:hint="学校名称"
                android:inputType="phone" />

            <EditText
                android:id="@+id/sch_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:ems="10"
                android:hint="学校编号"
                android:inputType="phone" />

            <EditText
                android:id="@+id/sch_department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:ems="10"
                android:hint="所在院系"
                android:inputType="phone" />

            <EditText
                android:id="@+id/departmentid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:ems="10"
                android:hint="院系编号"
                android:inputType="phone" />

            <EditText
                android:id="@+id/sch_profession"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.20"
                android:ems="10"
                android:hint="所在专业"
                android:inputType="phone" />

            <EditText
                android:id="@+id/sch_phonenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="0.20"
                android:ems="10"
                android:hint="联系方式"
                android:inputType="phone" />

            <EditText
                android:id="@+id/sch_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:ems="10"
                android:hint="电子邮箱"
                android:inputType="textEmailAddress" />

            <Button
                android:id="@+id/sch_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.20"
                android:text="培养计划" />

            <Button
                android:id="@+id/btn_sch_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.20"
                android:text="保存" />

            <Button
                android:id="@+id/btn_sch_identify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.20"
                android:text="认证" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
